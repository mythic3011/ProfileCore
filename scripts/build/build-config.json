{
  "version": "5.0.0",
  "buildConfiguration": {
    "minify": {
      "enabled": true,
      "removeComments": true,
      "removeEmptyLines": true,
      "preserveShebang": true
    },
    "optimization": {
      "bundleModules": false,
      "compressArchives": true,
      "generateChecksums": true
    },
    "testing": {
      "runTests": true,
      "requireAllPass": true
    }
  },
  "includes": {
    "essentialFiles": [
      "README.md",
      "QUICK_START.md",
      "INSTALL.md",
      "LICENSE",
      "MIGRATION_V5.md",
      "Microsoft.PowerShell_profile.ps1"
    ],
    "modules": [
      "modules/ProfileCore/**/*.ps1",
      "modules/ProfileCore/**/*.psd1",
      "modules/ProfileCore/**/*.psm1"
    ],
    "shells": [
      "shells/zsh/**/*.zsh",
      "shells/bash/**/*.bash",
      "shells/fish/**/*.fish"
    ],
    "plugins": [
      "examples/plugins/**/*.ps1",
      "examples/plugins/**/*.psd1",
      "examples/plugins/**/*.psm1",
      "examples/plugins/**/README.md"
    ],
    "scripts": [
      "scripts/installation/*.ps1",
      "scripts/installation/*.sh"
    ],
    "documentation": [
      "docs/PROFILECORE_V5_SUMMARY.md",
      "docs/development/SOLID_ARCHITECTURE.md",
      "docs/development/OPTIMIZATION_SUMMARY.md",
      "docs/development/contributing.md"
    ]
  },
  "excludes": {
    "patterns": [
      "**/.git/**",
      "**/.vscode/**",
      "**/node_modules/**",
      "**/build/**",
      "**/*.log",
      "**/.DS_Store",
      "**/Thumbs.db",
      "**/*.bak",
      "**/*~"
    ],
    "directories": [
      ".git",
      ".github",
      ".vscode",
      "build",
      "tests"
    ],
    "files": [
      ".gitignore",
      ".gitattributes",
      ".editorconfig"
    ]
  },
  "compression": {
    "format": "zip",
    "level": 9,
    "createTarGz": true
  },
  "checksums": {
    "algorithms": [
      "MD5",
      "SHA256"
    ]
  }
}

